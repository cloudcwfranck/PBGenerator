{
  "name": "Commercial Node CI",
  "on": { "push": { "branches": ["main"] }, "pull_request": {} },
  "jobs": {
    "build": {
      "runs-on": "ubuntu-latest",
      "steps": [
        { "uses": "actions/checkout@v4" },
        { "name": "Setup Node", "uses": "actions/setup-node@v4", "with": {"node-version": "20"} },
        { "name": "Build", "run": "npm ci && npm test" }
      ]
    }
  }
}
