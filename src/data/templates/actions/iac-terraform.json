{
  "name": "IaC Terraform",
  "on": { "push": { "branches": ["main"] }, "pull_request": {} },
  "jobs": {
    "build": {
      "runs-on": "ubuntu-latest",
      "steps": [
        { "uses": "actions/checkout@v4" },
        { "name": "Terraform fmt", "run": "terraform fmt -check" },
        { "name": "Terraform validate", "run": "terraform validate" }
      ]
    }
  }
}
